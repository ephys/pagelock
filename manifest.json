{
	"name": "Pagelock",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Ferme une page qu'on ne veut pas ouvrir",

	"icons": {
		"16": "img/icon-16.png",
		"48": "img/icon-48.png",
		"128": "img/icon-128.png"
	},

	"browser_action": {
		"default_icon": "img/icon-48.png",
		"default_title": "Block page"
	},

	"background": {
		"scripts": ["js/background.js"]
	},

	"options_page": "html/options.html",

	"permissions": [
		"tabs",
		"storage",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	]
}

